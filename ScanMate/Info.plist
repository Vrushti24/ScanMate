<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- PRIVACY PERMISSIONS (ROOT LEVEL) -->
    <key>NSCameraUsageDescription</key>
    <string>ScanMate needs camera access to scan documents and take photos of your files</string>
    
    <key>NSPhotoLibraryUsageDescription</key>
    <string>ScanMate needs photo library access to import your existing documents and images</string>

    <!-- DOCUMENT TYPE DECLARATIONS -->
    <key>CFBundleDocumentTypes</key>
    <array>
        <dict>
            <key>CFBundleTypeName</key>
            <string>PDF Document</string>
            <key>CFBundleTypeIconFiles</key>
            <array/>
            <key>LSHandlerRank</key>
            <string>Default</string>
            <key>LSItemContentTypes</key>
            <array>
                <string>com.adobe.pdf</string>
            </array>
        </dict>
        <dict>
            <key>CFBundleTypeName</key>
            <string>Image</string>
            <key>CFBundleTypeIconFiles</key>
            <array/>
            <key>LSHandlerRank</key>
            <string>Default</string>
            <key>LSItemContentTypes</key>
            <array>
                <string>public.image</string>
                <string>public.jpeg</string>
                <string>public.png</string>
            </array>
        </dict>
    </array>
</dict>
</plist>
